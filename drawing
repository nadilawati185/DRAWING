  <script>
    const defaultConfig = {
      app_title: "Container Loading System",
      company_name: "PT. Logistics Indonesia",
      footer_text: "¬© 2024 Container Loading System - Professional Loading Planning Solution"
    };

    const themes = {
      'pastel-pink': {
        background: 'linear-gradient(135deg, #FFB6C1 0%, #FFC0CB 100%)',
        surface: '#FFF0F5',
        text: '#8B4789',
        primary: '#FF69B4',
        secondary: '#FFB6C1'
      },
      'pastel-blue': {
        background: 'linear-gradient(135deg, #B0E0E6 0%, #87CEEB 100%)',
        surface: '#F0F8FF',
        text: '#2C5F7C',
        primary: '#4682B4',
        secondary: '#87CEEB'
      },
      'pastel-green': {
        background: 'linear-gradient(135deg, #98D8C8 0%, #90EE90 100%)',
        surface: '#F0FFF0',
        text: '#2F6B4F',
        primary: '#3CB371',
        secondary: '#90EE90'
      },
      'pastel-purple': {
        background: 'linear-gradient(135deg, #DDA0DD 0%, #E6E6FA 100%)',
        surface: '#F8F4FF',
        text: '#6A4C93',
        primary: '#9370DB',
        secondary: '#DDA0DD'
      },
      'pastel-orange': {
        background: 'linear-gradient(135deg, #FFDAB9 0%, #FFE4B5 100%)',
        surface: '#FFF8F0',
        text: '#8B4513',
        primary: '#FF8C00',
        secondary: '#FFDAB9'
      },
      'modern-dark': {
        background: 'linear-gradient(135deg, #1e293b 0%, #334155 100%)',
        surface: '#1e293b',
        text: '#e2e8f0',
        primary: '#3b82f6',
        secondary: '#475569'
      },
      'professional-blue': {
        background: 'linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%)',
        surface: '#ffffff',
        text: '#1e293b',
        primary: '#3b82f6',
        secondary: '#2563eb'
      }
    };

    let currentTheme = 'professional-blue';

    const vehicleSpecs = {
      'trailer': { length: 13.6, width: 2.45, height: 2.7, maxWeight: 25000, name: 'Trailer' },
      'tronton-losbak': { length: 9, width: 2.5, height: 2.4, maxWeight: 15000, name: 'Tronton Losbak' },
      'tronton-wingbox': { length: 9, width: 2.5, height: 2.4, maxWeight: 15000, name: 'Tronton Wing Box' },
      'container-20': { length: 5.9, width: 2.35, height: 2.39, maxWeight: 24000, name: 'Container 20 ft' },
      'container-40': { length: 12.03, width: 2.35, height: 2.39, maxWeight: 26000, name: 'Container 40 ft' },
      'container-40hq': { length: 12.03, width: 2.35, height: 2.69, maxWeight: 26000, name: 'Container 40 HQ' },
      'container-40nor': { length: 12.03, width: 2.35, height: 2.39, maxWeight: 27000, name: 'Container 40 NOR' }
    };

    const materialColors = [
      '#EF4444', '#F97316', '#F59E0B', '#EAB308', '#84CC16',
      '#22C55E', '#10B981', '#14B8A6', '#06B6D4', '#0EA5E9',
      '#3B82F6', '#6366F1', '#8B5CF6', '#A855F7', '#D946EF',
      '#EC4899', '#F43F5E'
    ];

    let allTrailers = [];
    let currentUploadedFile = null;
    let canvas, ctx;
    let rotation = { x: 25, y: 45 };
    let isDragging = false;
    let lastMouse = { x: 0, y: 0 };

    function changeTheme(themeName) {
      currentTheme = themeName;
      const theme = themes[themeName];
      
      document.querySelectorAll('.theme-btn').forEach(btn => btn.classList.remove('active'));
      document.querySelector(`[data-theme="${themeName}"]`).classList.add('active');
      
      document.querySelector('.app-wrapper').style.background = theme.background;
      
      document.querySelectorAll('.header, .panel, .tabs, .footer, .stat-card, .file-preview').forEach(el => {
        el.style.background = theme.surface;
        el.style.color = theme.text;
      });
      
      document.querySelectorAll('.tab.active').forEach(el => {
        el.style.background = theme.primary;
        el.style.color = themeName === 'modern-dark' ? '#ffffff' : theme.surface;
      });
      
      document.querySelectorAll('.btn-primary').forEach(el => {
        el.style.background = theme.primary;
      });
      
      document.querySelectorAll('.btn-secondary').forEach(el => {
        el.style.color = theme.primary;
        el.style.borderColor = theme.primary;
      });
      
      document.querySelectorAll('.progress-fill').forEach(el => {
        el.style.background = theme.primary;
      });
    }

    async function onConfigChange(config) {
      const appTitle = config.app_title || defaultConfig.app_title;
      const companyName = config.company_name || defaultConfig.company_name;
      const footerText = config.footer_text || defaultConfig.footer_text;

      document.getElementById('app-title').textContent = appTitle;
      document.getElementById('company-name').textContent = companyName;
      document.getElementById('footer-text').textContent = footerText;
    }

    const dataHandler = {
      onDataChanged(data) {
        allTrailers = data;
        updateTrailersList();
        updateStatistics();
      }
    };

    async function init() {
      const dataSdkResult = await window.dataSdk.init(dataHandler);
      if (!dataSdkResult.isOk) {
        showToast("Gagal menginisialisasi sistem", "error");
        return;
      }

      if (window.elementSdk) {
        window.elementSdk.init({
          defaultConfig,
          onConfigChange,
          mapToCapabilities: () => ({
            recolorables: [],
            borderables: [],
            fontEditable: undefined,
            fontSizeable: undefined
          }),
          mapToEditPanelValues: (config) => new Map([
            ["app_title", config.app_title || defaultConfig.app_title],
            ["company_name", config.company_name || defaultConfig.company_name],
            ["footer_text", config.footer_text || defaultConfig.footer_text]
          ])
        });
      }

      const today = new Date().toISOString().split('T')[0];
      document.getElementById('project-date').value = today;

      const thisMonth = new Date().toISOString().substring(0, 7);
      document.getElementById('filter-month').value = thisMonth;

      canvas = document.getElementById('canvas-3d');
      ctx = canvas.getContext('2d');
      
      canvas.width = canvas.offsetWidth * 2;
      canvas.height = canvas.offsetHeight * 2;
      ctx.scale(2, 2);

      canvas.addEventListener('mousedown', (e) => {
        isDragging = true;
        lastMouse = { x: e.clientX, y: e.clientY };
      });

      canvas.addEventListener('mousemove', (e) => {
        if (isDragging) {
          const dx = e.clientX - lastMouse.x;
          const dy = e.clientY - lastMouse.y;
          rotation.y += dx * 0.5;
          rotation.x -= dy * 0.5;
          rotation.x = Math.max(-90, Math.min(90, rotation.x));
          lastMouse = { x: e.clientX, y: e.clientY };
          render3D();
        }
      });

      canvas.addEventListener('mouseup', () => isDragging = false);
      canvas.addEventListener('mouseleave', () => isDragging = false);

      document.getElementById('document-type').addEventListener('change', checkStep1Complete);
      document.getElementById('vehicle-type').addEventListener('change', checkStep1Complete);

      const uploadZone = document.getElementById('upload-zone');
      const fileInput = document.getElementById('file-input');

      uploadZone.addEventListener('click', () => {
        if (document.getElementById('upload-section').style.display !== 'none') {
          fileInput.click();
        }
      });

      uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        if (document.getElementById('upload-section').style.display !== 'none') {
          uploadZone.classList.add('dragover');
        }
      });

      uploadZone.addEventListener('dragleave', () => {
        uploadZone.classList.remove('dragover');
      });

      uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadZone.classList.remove('dragover');
        if (document.getElementById('upload-section').style.display !== 'none') {
          const files = e.dataTransfer.files;
          if (files.length > 0) {
            handleFileUpload(files[0]);
          }
        }
      });

      fileInput.addEventListener('change', (e) => {
        if (e.target.files.length > 0) {
          handleFileUpload(e.target.files[0]);
        }
      });

      document.getElementById('upload-form').addEventListener('submit', handleFormSubmit);

      document.getElementById('search-trailers').addEventListener('input', filterTrailers);
      document.getElementById('filter-doc-type').addEventListener('change', filterTrailers);
      document.getElementById('filter-vehicle-type').addEventListener('change', filterTrailers);
      document.getElementById('filter-sort-trailers').addEventListener('change', filterTrailers);
      document.getElementById('filter-month').addEventListener('change', updateStatistics);
      document.getElementById('filter-customer').addEventListener('change', updateStatistics);
    }

    function checkStep1Complete() {
      const docType = document.getElementById('document-type').value;
      const vehicleType = document.getElementById('vehicle-type').value;

      if (docType && vehicleType) {
        document.getElementById('step-1').classList.add('completed');
        document.getElementById('step-2').classList.add('active');
        document.getElementById('upload-section').style.display = 'block';
        showToast("‚úÖ Step 1 selesai! Lanjut upload file dokumen", "success");
      }
    }

    function handleFileUpload(file) {
      const maxSize = 2 * 1024 * 1024 * 1024;
      if (file.size > maxSize) {
        showToast("File terlalu besar! Maksimal 2GB", "error");
        return;
      }

      const allowedExtensions = ['xlsx', 'xls', 'csv', 'pdf', 'png', 'jpg', 'jpeg'];
      const fileName = file.name.toLowerCase();
      const fileExtension = fileName.split('.').pop();

      if (!allowedExtensions.includes(fileExtension)) {
        showToast("Format file tidak didukung", "error");
        return;
      }

      currentUploadedFile = file;

      const fileIcons = {
        'xlsx': 'üìä', 'xls': 'üìä', 'csv': 'üìä',
        'pdf': 'üìÑ',
        'png': 'üñºÔ∏è', 'jpg': 'üñºÔ∏è', 'jpeg': 'üñºÔ∏è'
      };

      document.getElementById('file-icon').textContent = fileIcons[fileExtension] || 'üìÑ';
      document.getElementById('file-name').textContent = file.name;
      document.getElementById('file-size').textContent = formatFileSize(file.size);
      document.getElementById('file-preview').classList.add('active');
      document.getElementById('upload-zone').classList.add('has-file');

      document.getElementById('step-2').classList.add('completed');
      document.getElementById('step-3').classList.add('active');
      document.getElementById('post-section').style.display = 'block';

      showToast("‚úÖ File berhasil diupload! Klik POST untuk calculate", "success");
    }

    function removeFile() {
      currentUploadedFile = null;
      document.getElementById('file-input').value = '';
      document.getElementById('file-preview').classList.remove('active');
      document.getElementById('upload-zone').classList.remove('has-file');
      document.getElementById('step-2').classList.remove('completed');
      document.getElementById('step-3').classList.remove('active');
      document.getElementById('post-section').style.display = 'none';
      document.getElementById('calculation-result').style.display = 'none';
    }

    function formatFileSize(bytes) {
      if (bytes === 0) return '0 Bytes';
      const k = 1024;
      const sizes = ['Bytes', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }

    async function handleFormSubmit(e) {
      e.preventDefault();

      if (!currentUploadedFile) {
        showToast("Upload file terlebih dahulu", "error");
        return;
      }

      if (allTrailers.length >= 999) {
        showToast("Batas maksimum 999 trailer telah tercapai", "error");
        return;
      }

      const postBtn = document.getElementById('post-btn');
      const postBtnText = document.getElementById('post-btn-text');
      const postLoading = document.getElementById('post-loading');

      postBtn.disabled = true;
      postBtnText.style.display = 'none';
      postLoading.style.display = 'block';

      const docType = document.getElementById('document-type').value;
      const vehicleType = document.getElementById('vehicle-type').value;
      const deliveryNumber = document.getElementById('delivery-number').value;
      const customerName = document.getElementById('customer-name').value;
      const destination = document.getElementById('destination').value;
      const projectDate = document.getElementById('project-date').value;

      const date = new Date(projectDate);
      const dateStr = date.toISOString().split('T')[0].replace(/-/g, '');
      const month = date.toISOString().substring(0, 7);

      const existingTrailers = allTrailers.filter(t => 
        t.created_date === projectDate && t.vehicle_type === vehicleType
      );
      const trailerNum = existingTrailers.length + 1;
      const trailerNumber = `TRAILER-${trailerNum}`;

      const projectNumber = `${docType}-${dateStr}-${trailerNumber}`;

      const reader = new FileReader();
      
      reader.onload = async (event) => {
        const fileData = event.target.result;

        let materials = [];
        
        if (currentUploadedFile.name.endsWith('.csv')) {
          materials = parseCSV(fileData);
        } else {
          materials = generateDemoMaterials();
        }

        const spec = vehicleSpecs[vehicleType];
        let totalWeight = 0;
        let totalVolume = 0;

        for (let i = 0; i < materials.length; i++) {
          const mat = materials[i];
          totalWeight += (mat.weight_per_unit || 0) * mat.quantity;
          totalVolume += (mat.length || 0) * (mat.width || 0) * (mat.height || 0) * mat.quantity;

          const materialData = {
            id: Date.now().toString() + Math.random().toString(36).substr(2, 9),
            project_number: projectNumber,
            trailer_number: trailerNumber,
            customer_name: customerName,
            project_name: `${docType} - ${customerName}`,
            vehicle_type: vehicleType,
            delivery_number: deliveryNumber,
            destination: destination,
            document_type: docType,
            uploaded_file_name: currentUploadedFile.name,
            uploaded_file_url: '',
            uploaded_file_data: fileData.substring(0, 1000),
            material_code: mat.material_code,
            material_name: mat.material_name,
            material_type: mat.material_type,
            material_link: mat.material_link || '',
            sap_system: mat.sap_system || 'NONE',
            gsm: mat.gsm || 0,
            diameter: mat.diameter || 0,
            length: mat.length || 0,
            width: mat.width || 0,
            height: mat.height || 0,
            weight_per_unit: mat.weight_per_unit || 0,
            quantity: mat.quantity,
            position_x: 0,
            position_y: 0,
            position_z: 0,
            color: materialColors[i % materialColors.length],
            description: mat.description || '',
            created_at: new Date().toISOString(),
            created_date: projectDate,
            created_month: month
          };

          const result = await window.dataSdk.create(materialData);
          
          if (!result.isOk) {
            postBtn.disabled = false;
            postBtnText.style.display = 'inline';
            postLoading.style.display = 'none';
            showToast(`Gagal menyimpan material ${i + 1}`, "error");
            return;
          }
        }

        postBtn.disabled = false;
        postBtnText.style.display = 'inline';
        postLoading.style.display = 'none';

        document.getElementById('step-3').classList.add('completed');

        const weightUtil = (totalWeight / spec.maxWeight * 100);
        const volumeUtil = (totalVolume / (spec.length * spec.width * spec.height) * 100);

        let capacityClass = 'ok';
        let capacityIcon = '‚úÖ';
        let capacityMessage = 'BARANG TERMUAT - Kapasitas mencukupi!';

        if (weightUtil > 100 || volumeUtil > 100) {
          capacityClass = 'overload';
          capacityIcon = 'üö®';
          capacityMessage = 'BARANG TIDAK TERMUAT - OVERLOAD! Berat atau volume melebihi kapasitas truck';
        } else if (weightUtil > 90 || volumeUtil > 90) {
          capacityClass = 'warning';
          capacityIcon = '‚ö†Ô∏è';
          capacityMessage = 'BARANG TERMUAT - Peringatan: Mendekati kapasitas maksimal';
        }

        document.getElementById('capacity-result').innerHTML = `
          <div class="capacity-icon">${capacityIcon}</div>
          <div>
            <div style="font-size: 18px; margin-bottom: 8px;">${capacityMessage}</div>
            <div style="font-size: 14px; opacity: 0.8;">
              Berat: ${(totalWeight/1000).toFixed(2)}/${(spec.maxWeight/1000).toFixed(1)} Ton (${weightUtil.toFixed(1)}%) | 
              Volume: ${totalVolume.toFixed(2)}/${(spec.length * spec.width * spec.height).toFixed(2)} m¬≥ (${volumeUtil.toFixed(1)}%)
            </div>
          </div>
        `;
        document.getElementById('capacity-result').className = `capacity-check ${capacityClass}`;

        updateVehicleInfo(vehicleType, trailerNumber);
        updateLoadingStats(vehicleType, materials);
        render3D(vehicleType, materials);

        displayMaterialsDetail(materials);

        document.getElementById('calculation-result').style.display = 'block';
        document.getElementById('print-section').style.display = 'block';
        
        showToast(`üéâ POST Berhasil! ${trailerNumber} telah dibuat dengan ${materials.length} material`, "success");

        setTimeout(() => {
          document.getElementById('calculation-result').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }, 500);
      };

      if (currentUploadedFile.name.endsWith('.csv')) {
        reader.readAsText(currentUploadedFile);
      } else {
        reader.readAsDataURL(currentUploadedFile);
      }
    }

    function parseCSV(csvContent) {
      const lines = csvContent.split('\n').filter(line => line.trim());
      
      if (lines.length < 2) return generateDemoMaterials();

      const headers = lines[0].split(',').map(h => h.trim().toLowerCase());
      const materials = [];

      for (let i = 1; i < Math.min(lines.length, 51); i++) {
        const values = lines[i].split(',').map(v => v.trim());
        
        const material = {
          material_code: values[headers.indexOf('material code')] || `MAT-${i}`,
          material_name: values[headers.indexOf('material name')] || `Material ${i}`,
          material_type: values[headers.indexOf('type')] || 'Box',
          sap_system: values[headers.indexOf('sap system')] || 'NONE',
          material_link: values[headers.indexOf('link')] || '',
          length: parseFloat(values[headers.indexOf('length')]) || (Math.random() * 2 + 0.5),
          width: parseFloat(values[headers.indexOf('width')]) || (Math.random() * 1.5 + 0.5),
          height: parseFloat(values[headers.indexOf('height')]) || (Math.random() * 1.5 + 0.5),
          weight_per_unit: parseFloat(values[headers.indexOf('weight')]) || (Math.random() * 500 + 100),
          quantity: parseInt(values[headers.indexOf('quantity')]) || (Math.floor(Math.random() * 10) + 1),
          gsm: parseFloat(values[headers.indexOf('gsm')]) || 0,
          diameter: parseFloat(values[headers.indexOf('diameter')]) || 0,
          description: values[headers.indexOf('description')] || ''
        };

        materials.push(material);
      }

      return materials.length > 0 ? materials : generateDemoMaterials();
    }

    function generateDemoMaterials() {
      const types = ['Roll', 'Sheet', 'Box', 'Pack', 'Pallet'];
      const count = Math.floor(Math.random() * 20) + 10;
      const materials = [];

      for (let i = 0; i < count; i++) {
        const type = types[Math.floor(Math.random() * types.length)];
        const isRoll = type === 'Roll';

        materials.push({
          material_code: `MAT-${(i + 1).toString().padStart(3, '0')}`,
          material_name: isRoll ? `Paper Roll ${i + 1}` : `${type} Material ${i + 1}`,
          material_type: type,
          material_link: Math.random() > 0.5 ? 'BROWN' : 'ECC',
          sap_system: Math.random() > 0.5 ? 'ECC' : 'S4HANA',
          length: isRoll ? (Math.random() * 0.5 + 0.8) : (Math.random() * 2 + 0.5),
          width: isRoll ? (Math.random() * 0.5 + 0.8) : (Math.random() * 1.5 + 0.5),
          height: isRoll ? (Math.random() * 0.5 + 0.8) : (Math.random() * 1.5 + 0.5),
          diameter: isRoll ? (Math.random() * 0.3 + 0.5) : 0,
          weight_per_unit: Math.random() * 500 + 100,
          quantity: Math.floor(Math.random() * 10) + 1,
          gsm: isRoll ? (Math.floor(Math.random() * 200) + 80) : 0,
          description: `Auto-generated from uploaded document`
        });
      }

      return materials;
    }

    function updateVehicleInfo(vehicleType, trailerNumber) {
      const spec = vehicleSpecs[vehicleType];
      const volume = (spec.length * spec.width * spec.height).toFixed(2);
      
      document.getElementById('vehicle-info').innerHTML = `
        <strong>${trailerNumber}</strong>
        <div class="vehicle-info-row">
          <span>Truck:</span>
          <span>${spec.name}</span>
        </div>
        <div class="vehicle-info-row">
          <span>Dimensi:</span>
          <span>${spec.length}m √ó ${spec.width}m √ó ${spec.height}m</span>
        </div>
        <div class="vehicle-info-row">
          <span>Volume:</span>
          <span>${volume} m¬≥</span>
        </div>
        <div class="vehicle-info-row">
          <span>Max Berat:</span>
          <span>${(spec.maxWeight / 1000).toFixed(1)} Ton</span>
        </div>
      `;
    }

    function updateLoadingStats(vehicleType, materials) {
      const spec = vehicleSpecs[vehicleType];
      const maxVolume = spec.length * spec.width * spec.height;
      const maxWeight = spec.maxWeight;
      
      const totalVolume = materials.reduce((sum, m) => 
        sum + ((m.length || 0) * (m.width || 0) * (m.height || 0) * m.quantity), 0
      );
      
      const totalWeight = materials.reduce((sum, m) => 
        sum + ((m.weight_per_unit || 0) * m.quantity), 0
      );
      
      const volumeUtil = (totalVolume / maxVolume * 100);
      const weightUtil = (totalWeight / maxWeight * 100);
      
      const theme = themes[currentTheme];
      
      document.getElementById('loading-stats').innerHTML = `
        <div class="loading-stats-title">üìä Statistik Loading</div>
        <div class="stat-row">
          <span class="stat-label">Material:</span>
          <span class="stat-value">${materials.length} item</span>
        </div>
        <div class="stat-row">
          <span class="stat-label">Volume:</span>
          <span class="stat-value">${totalVolume.toFixed(2)} m¬≥</span>
        </div>
        <div class="stat-row">
          <span class="stat-label">Kapasitas:</span>
          <span class="stat-value">${maxVolume.toFixed(2)} m¬≥</span>
        </div>
        <div class="progress-bar">
          <div class="progress-fill" style="width: ${Math.min(volumeUtil, 100)}%; background: ${volumeUtil > 100 ? '#ef4444' : theme.primary}"></div>
        </div>
        <div class="stat-row" style="margin-top: 12px;">
          <span class="stat-label">Berat Total:</span>
          <span class="stat-value">${(totalWeight / 1000).toFixed(2)} Ton</span>
        </div>
        <div class="stat-row">
          <span class="stat-label">Max Berat:</span>
          <span class="stat-value">${(maxWeight / 1000).toFixed(1)} Ton</span>
        </div>
        <div class="progress-bar">
          <div class="progress-fill" style="width: ${Math.min(weightUtil, 100)}%; background: ${weightUtil > 100 ? '#ef4444' : theme.primary}"></div>
        </div>
        <div class="stat-row" style="margin-top: 8px;">
          <span class="stat-label">Utilisasi:</span>
          <span class="stat-value" style="color: ${volumeUtil > 100 || weightUtil > 100 ? '#ef4444' : '#10b981'}">${Math.max(volumeUtil, weightUtil).toFixed(1)}%</span>
        </div>
      `;
    }

    function displayMaterialsDetail(materials) {
      const html = materials.map((m, i) => {
        const isRoll = m.material_type === 'Roll' || m.material_type === 'Reel';
        const shapeIcon = isRoll ? '‚≠ï' : 'üì¶';
        const shapeText = isRoll ? 'Roll/Gulungan' : 'Sheet/Kotak';

        return `
          <div class="material-item">
            <div class="color-indicator" style="background: ${materialColors[i % materialColors.length]}"></div>
            <div class="material-content">
              <div class="material-title">${shapeIcon} ${m.material_name}</div>
              <div class="material-subtitle">${m.material_code} - ${shapeText}</div>
              <div class="material-specs">
                <div class="spec-item">üìè ${m.length.toFixed(2)}√ó${m.width.toFixed(2)}√ó${m.height.toFixed(2)}m</div>
                ${isRoll ? `<div class="spec-item">‚≠ï √ò${m.diameter.toFixed(2)}m</div>` : ''}
                <div class="spec-item">‚öñÔ∏è ${m.weight_per_unit.toFixed(1)} kg</div>
                <div class="spec-item">üì¶ Qty: ${m.quantity}</div>
                ${m.gsm > 0 ? `<div class="spec-item">üìÑ ${m.gsm} GSM</div>` : ''}
                ${m.material_link ? `<div class="spec-item">üîó ${m.material_link}</div>` : ''}
              </div>
            </div>
          </div>
        `;
      }).join('');

      document.getElementById('materials-detail').innerHTML = `
        <h3 style="margin-top: 0; margin-bottom: 16px;">üìã Detail Material (${materials.length} items)</h3>
        ${html}
      `;
    }

    function render3D(vehicleType = 'trailer', materials = []) {
      const w = canvas.width / 2;
      const h = canvas.height / 2;
      ctx.clearRect(0, 0, w, h);

      const spec = vehicleSpecs[vehicleType];
      const scale = Math.min(w / spec.length, h / spec.width, 150 / spec.height) * 0.4;
      
      const centerX = w / 2;
      const centerY = h / 2;

      function project3D(x, y, z) {
        const rad = rotation.y * Math.PI / 180;
        const radX = rotation.x * Math.PI / 180;
        
        const cosY = Math.cos(rad);
        const sinY = Math.sin(rad);
        const cosX = Math.cos(radX);
        const sinX = Math.sin(radX);
        
        let rotY_x = x * cosY - z * sinY;
        let rotY_z = x * sinY + z * cosY;
        
        let rotX_y = y * cosX - rotY_z * sinX;
        let rotX_z = y * sinX + rotY_z * cosX;
        
        return {
          x: centerX + rotY_x * scale,
          y: centerY - rotX_y * scale,
          z: rotX_z
        };
      }

      function drawBox(x, y, z, l, w, h, color, isRoll = false) {
        if (isRoll) {
          drawCylinder(x, y, z, l, w, h, color);
        } else {
          const vertices = [
            [x, y, z], [x + l, y, z], [x + l, y + w, z], [x, y + w, z],
            [x, y, z + h], [x + l, y, z + h], [x + l, y + w, z + h], [x, y + w, z + h]
          ];

          const projected = vertices.map(v => project3D(v[0], v[1], v[2]));

          const faces = [
            [0, 1, 2, 3], [4, 5, 6, 7], [0, 1, 5, 4],
            [2, 3, 7, 6], [0, 3, 7, 4], [1, 2, 6, 5]
          ];

          const facesWithDepth = faces.map((face, i) => {
            const avgZ = face.reduce((sum, vi) => sum + projected[vi].z, 0) / 4;
            return { face, avgZ, index: i };
          });

          facesWithDepth.sort((a, b) => a.avgZ - b.avgZ);

          facesWithDepth.forEach(({ face, index }) => {
            ctx.beginPath();
            ctx.moveTo(projected[face[0]].x, projected[face[0]].y);
            for (let i = 1; i < face.length; i++) {
              ctx.lineTo(projected[face[i]].x, projected[face[i]].y);
            }
            ctx.closePath();

            const brightness = [0.6, 0.95, 0.5, 0.5, 0.55, 0.8][index];
            ctx.fillStyle = shadeColor(color, brightness);
            ctx.fill();
            ctx.strokeStyle = 'rgba(0, 0, 0, 0.2)';
            ctx.lineWidth = 1;
            ctx.stroke();
          });
        }
      }

      function drawCylinder(x, y, z, l, diameter, h, color) {
        const radius = diameter / 2;
        const segments = 16;
        
        const centerProj = project3D(x + l/2, y + diameter/2, z + h/2);
        
        ctx.beginPath();
        for (let i = 0; i <= segments; i++) {
          const angle = (i / segments) * Math.PI * 2;
          const px = x + l/2 + Math.cos(angle) * radius;
          const py = y + diameter/2 + Math.sin(angle) * radius;
          const proj = project3D(px, py, z + h/2);
          if (i === 0) ctx.moveTo(proj.x, proj.y);
          else ctx.lineTo(proj.x, proj.y);
        }
        ctx.fillStyle = shadeColor(color, 0.7);
        ctx.fill();
        ctx.strokeStyle = 'rgba(0, 0, 0, 0.2)';
        ctx.stroke();
      }

      function shadeColor(color, factor) {
        const r = parseInt(color.slice(1, 3), 16);
        const g = parseInt(color.slice(3, 5), 16);
        const b = parseInt(color.slice(5, 7), 16);
        return `rgb(${Math.floor(r * factor)}, ${Math.floor(g * factor)}, ${Math.floor(b * factor)})`;
      }

      drawBox(-spec.length / 2, -spec.width / 2, 0, spec.length, spec.width, spec.height, '#cbd5e1');

      let currentX = -spec.length / 2 + 0.05;
      let currentY = -spec.width / 2 + 0.05;
      let currentZ = 0.05;
      let rowMaxWidth = 0;
      let layerMaxHeight = 0;

      materials.forEach((material, idx) => {
        const matLength = material.length || 0.5;
        const matWidth = material.width || 0.5;
        const matHeight = material.height || 0.5;
        const isRoll = material.material_type === 'Roll' || material.material_type === 'Reel';
        
        for (let i = 0; i < material.quantity; i++) {
          if (currentX + matLength > spec.length / 2 - 0.05) {
            currentX = -spec.length / 2 + 0.05;
            currentY += rowMaxWidth + 0.05;
            rowMaxWidth = 0;
            
            if (currentY + matWidth > spec.width / 2 - 0.05) {
              currentY = -spec.width / 2 + 0.05;
              currentZ += layerMaxHeight + 0.05;
              layerMaxHeight = 0;
            }
          }

          if (currentZ + matHeight <= spec.height - 0.05) {
            drawBox(currentX, currentY, currentZ, matLength, matWidth, matHeight, materialColors[idx % materialColors.length], isRoll);
            currentX += matLength + 0.05;
            rowMaxWidth = Math.max(rowMaxWidth, matWidth);
            layerMaxHeight = Math.max(layerMaxHeight, matHeight);
          }
        }
      });
    }

    function updateTrailersList() {
      const trailersMap = new Map();
      
      allTrailers.forEach(material => {
        const key = `${material.project_number}-${material.trailer_number}`;
        if (!trailersMap.has(key)) {
          trailersMap.set(key, {
            project_number: material.project_number,
            trailer_number: material.trailer_number,
            customer_name: material.customer_name,
            destination: material.destination,
            vehicle_type: material.vehicle_type,
            delivery_number: material.delivery_number,
            document_type: material.document_type,
            created_date: material.created_date,
            created_at: material.created_at,
            materials: []
          });
        }
        trailersMap.get(key).materials.push(material);
      });
      
      const trailers = Array.from(trailersMap.values());
      filterTrailersDisplay(trailers);
    }

    function filterTrailers() {
      const trailersMap = new Map();
      
      allTrailers.forEach(material => {
        const key = `${material.project_number}-${material.trailer_number}`;
        if (!trailersMap.has(key)) {
          trailersMap.set(key, {
            project_number: material.project_number,
            trailer_number: material.trailer_number,
            customer_name: material.customer_name,
            destination: material.destination,
            vehicle_type: material.vehicle_type,
            delivery_number: material.delivery_number,
            document_type: material.document_type,
            created_date: material.created_date,
            created_at: material.created_at,
            materials: []
          });
        }
        trailersMap.get(key).materials.push(material);
      });
      
      let trailers = Array.from(trailersMap.values());
      
      const searchTerm = document.getElementById('search-trailers').value.toLowerCase();
      const docFilter = document.getElementById('filter-doc-type').value;
      const vehicleFilter = document.getElementById('filter-vehicle-type').value;
      const sortFilter = document.getElementById('filter-sort-trailers').value;
      
      if (searchTerm) {
        trailers = trailers.filter(t => 
          t.trailer_number.toLowerCase().includes(searchTerm) ||
          t.customer_name.toLowerCase().includes(searchTerm) ||
          t.delivery_number.toLowerCase().includes(searchTerm) ||
          t.destination.toLowerCase().includes(searchTerm)
        );
      }
      
      if (docFilter) {
        trailers = trailers.filter(t => t.document_type === docFilter);
      }
      
      if (vehicleFilter) {
        trailers = trailers.filter(t => t.vehicle_type === vehicleFilter);
      }
      
      trailers.sort((a, b) => {
        switch(sortFilter) {
          case 'newest':
            return new Date(b.created_at) - new Date(a.created_at);
          case 'oldest':
            return new Date(a.created_at) - new Date(b.created_at);
          case 'customer':
            return a.customer_name.localeCompare(b.customer_name);
          case 'trailer':
            return a.trailer_number.localeCompare(b.trailer_number);
          default:
            return 0;
        }
      });
      
      filterTrailersDisplay(trailers);
    }

    function filterTrailersDisplay(trailers) {
      const grid = document.getElementById('trailers-grid');
      
      if (trailers.length === 0) {
        grid.innerHTML = `
          <div class="empty-state">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3>Tidak Ada Trailer</h3>
            <p>Upload dokumen untuk membuat trailer baru</p>
          </div>
        `;
        return;
      }
      
      grid.innerHTML = trailers.map(trailer => {
        const spec = vehicleSpecs[trailer.vehicle_type];
        const totalWeight = trailer.materials.reduce((sum, m) => 
          sum + ((m.weight_per_unit || 0) * m.quantity), 0
        );
        
        const formattedDate = new Date(trailer.created_date).toLocaleDateString('id-ID', {
          day: 'numeric',
          month: 'long',
          year: 'numeric'
        });
        
        const docTypeBadge = {
          'PO': 'üìã PO',
          'SC': 'üìÑ SC',
          'CARGO_READY': 'üì¶ CARGO READY',
          'DN': 'üöö DN'
        };
        
        return `
          <div class="project-card">
            <div class="project-header-card">
              <div>
                <div class="trailer-badge">${trailer.trailer_number}</div>
                <div class="project-number" style="margin-top: 8px;">${trailer.project_number}</div>
              </div>
              <div class="project-badge">${docTypeBadge[trailer.document_type]}</div>
            </div>
            <div class="project-date">
              üìÖ ${formattedDate}
            </div>
            <div class="project-info">
              <strong>Customer:</strong> ${trailer.customer_name}
            </div>
            <div class="project-info">
              <strong>DN:</strong> ${trailer.delivery_number}
            </div>
            <div class="project-info">
              <strong>Tujuan:</strong> ${trailer.destination}
            </div>
            <div class="project-info">
              <strong>Truck:</strong> ${spec.name}
            </div>
            <div class="project-info">
              <strong>Material:</strong> ${trailer.materials.length} items
            </div>
            <div class="project-info">
              <strong>Total Berat:</strong> ${(totalWeight / 1000).toFixed(2)} Ton
            </div>
            <div class="project-actions">
              <button class="btn-small btn-view" onclick="viewTrailer('${trailer.project_number}', '${trailer.trailer_number}')">
                üëÅÔ∏è Lihat
              </button>
              <button class="btn-small btn-export" onclick="printTrailerToPDF('${trailer.project_number}', '${trailer.trailer_number}')">
                üñ®Ô∏è Print
              </button>
              <button class="btn-small btn-delete" onclick="deleteTrailer('${trailer.project_number}', '${trailer.trailer_number}')">
                üóëÔ∏è
              </button>
            </div>
          </div>
        `;
      }).join('');
    }

    function viewTrailer(projectNumber, trailerNumber) {
      showToast(`Membuka detail ${trailerNumber}`, "info");
    }

    async function deleteTrailer(projectNumber, trailerNumber) {
      const trailerMaterials = allTrailers.filter(m => 
        m.project_number === projectNumber && m.trailer_number === trailerNumber
      );
      
      for (const material of trailerMaterials) {
        await window.dataSdk.delete(material);
      }
      
      showToast("Trailer berhasil dihapus", "success");
    }

    function updateStatistics() {
      const filterMonth = document.getElementById('filter-month').value;
      const filterCustomer = document.getElementById('filter-customer').value;

      let filteredData = allTrailers;

      if (filterMonth) {
        filteredData = filteredData.filter(t => t.created_month === filterMonth);
      }

      if (filterCustomer) {
        filteredData = filteredData.filter(t => t.customer_name === filterCustomer);
      }

      // Tracking harian otomatis
      const today = new Date().toISOString().split('T')[0];
      const todayData = allTrailers.filter(t => t.created_date === today);

      const todayTrailersMap = new Map();
      todayData.forEach(material => {
        const key = `${material.project_number}-${material.trailer_number}`;
        if (!todayTrailersMap.has(key)) {
          todayTrailersMap.set(key, material.vehicle_type);
        }
      });

      let trailerCount = 0;
      let container20Count = 0;
      let container40Count = 0;
      let losbakCount = 0;
      let wingboxCount = 0;

      todayTrailersMap.forEach((vehicleType) => {
        if (vehicleType === 'trailer') trailerCount++;
        else if (vehicleType === 'container-20') container20Count++;
        else if (vehicleType === 'container-40' || vehicleType === 'container-40hq' || vehicleType === 'container-40nor') container40Count++;
        else if (vehicleType === 'tronton-losbak') losbakCount++;
        else if (vehicleType === 'tronton-wingbox') wingboxCount++;
      });

      const totalToday = todayTrailersMap.size;

      document.getElementById('stat-trailer-today').textContent = trailerCount;
      document.getElementById('stat-container20-today').textContent = container20Count;
      document.getElementById('stat-container40-today').textContent = container40Count;
      document.getElementById('stat-losbak-today').textContent = losbakCount;
      document.getElementById('stat-wingbox-today').textContent = wingboxCount;
      document.getElementById('stat-total-today').textContent = totalToday;

      const customerSelect = document.getElementById('filter-customer');
      const currentCustomer = customerSelect.value;
      customerSelect.innerHTML = '<option value="">Semua Customer</option>';
      Array.from(customersSet).sort().forEach(customer => {
        const option = document.createElement('option');
        option.value = customer;
        option.textContent = customer;
        if (customer === currentCustomer) option.selected = true;
        customerSelect.appendChild(option);
      });

      const monthsMap = new Map();
      allTrailers.forEach(material => {
        const month = material.created_month;
        if (!monthsMap.has(month)) {
          monthsMap.set(month, { trailers: new Set(), materials: 0, weight: 0, customers: new Map() });
        }
        const data = monthsMap.get(month);
        data.trailers.add(`${material.project_number}-${material.trailer_number}`);
        data.materials += 1;
        data.weight += (material.weight_per_unit || 0) * material.quantity;
        
        const customer = material.customer_name;
        data.customers.set(customer, (data.customers.get(customer) || 0) + 1);
      });

      // Tracking harian
      const dailyMap = new Map();
      allTrailers.forEach(material => {
        const date = material.created_date;
        if (!dailyMap.has(date)) {
          dailyMap.set(date, { 
            trailers: new Set(), 
            vehicleTypes: new Map()
          });
        }
        const data = dailyMap.get(date);
        const key = `${material.project_number}-${material.trailer_number}`;
        if (!data.trailers.has(key)) {
          data.trailers.add(key);
          data.vehicleTypes.set(key, material.vehicle_type);
        }
      });

      const dailyArray = Array.from(dailyMap.entries()).sort((a, b) => b[0].localeCompare(a[0]));

      const dailyTableBody = document.getElementById('daily-table-body');
      if (dailyArray.length === 0) {
        dailyTableBody.innerHTML = '<tr><td colspan="7" style="text-align: center; opacity: 0.5;">Belum ada data</td></tr>';
      } else {
        dailyTableBody.innerHTML = dailyArray.map(([date, data]) => {
          let trailer = 0, container20 = 0, container40 = 0, losbak = 0, wingbox = 0;
          
          data.vehicleTypes.forEach((vType) => {
            if (vType === 'trailer') trailer++;
            else if (vType === 'container-20') container20++;
            else if (vType === 'container-40' || vType === 'container-40hq' || vType === 'container-40nor') container40++;
            else if (vType === 'tronton-losbak') losbak++;
            else if (vType === 'tronton-wingbox') wingbox++;
          });
          
          const total = data.trailers.size;
          const dateFormatted = new Date(date).toLocaleDateString('id-ID', { 
            day: 'numeric', 
            month: 'long', 
            year: 'numeric' 
          });
          
          return `
            <tr>
              <td><strong>${dateFormatted}</strong></td>
              <td>${trailer}</td>
              <td>${container20}</td>
              <td>${container40}</td>
              <td>${losbak}</td>
              <td>${wingbox}</td>
              <td><strong>${total}</strong></td>
            </tr>
          `;
        }).join('');
      }

      // Tracking bulanan
      const monthsArray = Array.from(monthsMap.entries()).sort((a, b) => b[0].localeCompare(a[0]));

      const tableBody = document.getElementById('monthly-table-body');
      if (monthsArray.length === 0) {
        tableBody.innerHTML = '<tr><td colspan="7" style="text-align: center; opacity: 0.5;">Belum ada data</td></tr>';
      } else {
        tableBody.innerHTML = monthsArray.map(([month, data]) => {
          let trailer = 0, container20 = 0, container40 = 0, losbak = 0, wingbox = 0;
          
          const monthTrailers = allTrailers.filter(t => t.created_month === month);
          const monthTrailersMap = new Map();
          
          monthTrailers.forEach(material => {
            const key = `${material.project_number}-${material.trailer_number}`;
            if (!monthTrailersMap.has(key)) {
              monthTrailersMap.set(key, material.vehicle_type);
            }
          });
          
          monthTrailersMap.forEach((vType) => {
            if (vType === 'trailer') trailer++;
            else if (vType === 'container-20') container20++;
            else if (vType === 'container-40' || vType === 'container-40hq' || vType === 'container-40nor') container40++;
            else if (vType === 'tronton-losbak') losbak++;
            else if (vType === 'tronton-wingbox') wingbox++;
          });
          
          const monthName = new Date(month + '-01').toLocaleDateString('id-ID', { year: 'numeric', month: 'long' });
          const total = monthTrailersMap.size;
          
          return `
            <tr>
              <td><strong>${monthName}</strong></td>
              <td>${trailer}</td>
              <td>${container20}</td>
              <td>${container40}</td>
              <td>${losbak}</td>
              <td>${wingbox}</td>
              <td><strong>${total}</strong></td>
            </tr>
          `;
        }).join('');
      }
    }

    function showTab(tabName) {
      document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
      
      event.target.classList.add('active');
      document.getElementById(`tab-${tabName}`).classList.add('active');
      
      const theme = themes[currentTheme];
      document.querySelectorAll('.tab.active').forEach(el => {
        el.style.background = theme.primary;
        el.style.color = currentTheme === 'modern-dark' ? '#ffffff' : theme.surface;
      });
      
      if (tabName === 'trailers') {
        updateTrailersList();
      } else if (tabName === 'statistics') {
        updateStatistics();
      }
    }

    function showToast(message, type = 'success') {
      const toast = document.getElementById('toast');
      const toastMessage = document.getElementById('toast-message');
      
      toastMessage.textContent = message;
      toast.className = `toast toast-${type} active`;
      
      setTimeout(() => {
        toast.classList.remove('active');
      }, 4000);
    }

    function showVehicleDetail(vehicleType) {
      const today = new Date().toISOString().split('T')[0];
      const todayData = allTrailers.filter(t => t.created_date === today);

      const todayTrailersMap = new Map();
      todayData.forEach(material => {
        const key = `${material.project_number}-${material.trailer_number}`;
        if (!todayTrailersMap.has(key)) {
          todayTrailersMap.set(key, {
            trailer_number: material.trailer_number,
            vehicle_type: material.vehicle_type,
            customer_name: material.customer_name,
            destination: material.destination,
            delivery_number: material.delivery_number,
            document_type: material.document_type
          });
        }
      });

      let filteredTrailers = [];
      
      if (vehicleType === 'all') {
        filteredTrailers = Array.from(todayTrailersMap.values());
      } else if (vehicleType === 'container-40') {
        filteredTrailers = Array.from(todayTrailersMap.values()).filter(t => 
          t.vehicle_type === 'container-40' || t.vehicle_type === 'container-40hq' || t.vehicle_type === 'container-40nor'
        );
      } else {
        filteredTrailers = Array.from(todayTrailersMap.values()).filter(t => t.vehicle_type === vehicleType);
      }

      const typeNames = {
        'trailer': 'üöõ Trailer',
        'container-20': 'üì¶ Container 20ft',
        'container-40': 'üì¶ Container 40ft',
        'tronton-losbak': 'üöö Tronton Losbak',
        'tronton-wingbox': 'üöö Tronton Wing Box',
        'all': 'üìä Semua Kendaraan'
      };

      const modalTitle = document.getElementById('modal-title');
      modalTitle.textContent = `Detail ${typeNames[vehicleType]} Hari Ini (${filteredTrailers.length} unit)`;

      const modalBody = document.getElementById('modal-body-content');
      
      if (filteredTrailers.length === 0) {
        modalBody.innerHTML = `
          <div class="empty-state">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            <h3>Belum Ada Data</h3>
            <p>Tidak ada ${typeNames[vehicleType]} yang dibuat hari ini</p>
          </div>
        `;
      } else {
        const vehicleTypeNames = {
          'trailer': 'Trailer',
          'container-20': 'Container 20ft',
          'container-40': 'Container 40ft',
          'container-40hq': 'Container 40HQ',
          'container-40nor': 'Container 40NOR',
          'tronton-losbak': 'Tronton Losbak',
          'tronton-wingbox': 'Tronton Wing Box'
        };

        const docTypeBadge = {
          'PO': 'üìã PO',
          'SC': 'üìÑ SC',
          'CARGO_READY': 'üì¶ CARGO READY',
          'DN': 'üöö DN'
        };

        modalBody.innerHTML = `
          <div style="overflow-x: auto;">
            <table class="detail-table">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Trailer Number</th>
                  <th>Tipe Truck</th>
                  <th>Customer</th>
                  <th>Tujuan</th>
                  <th>DN</th>
                  <th>Jenis Dok</th>
                </tr>
              </thead>
              <tbody>
                ${filteredTrailers.map((t, index) => `
                  <tr>
                    <td><strong>${index + 1}</strong></td>
                    <td><strong>${t.trailer_number}</strong></td>
                    <td>${vehicleTypeNames[t.vehicle_type]}</td>
                    <td>${t.customer_name}</td>
                    <td>${t.destination}</td>
                    <td>${t.delivery_number}</td>
                    <td>${docTypeBadge[t.document_type]}</td>
                  </tr>
                `).join('')}
              </tbody>
            </table>
          </div>
        `;
      }

      document.getElementById('vehicle-detail-modal').classList.add('active');
    }

    function closeVehicleDetailModal() {
      document.getElementById('vehicle-detail-modal').classList.remove('active');
    }

    document.getElementById('vehicle-detail-modal').addEventListener('click', (e) => {
      if (e.target.id === 'vehicle-detail-modal') {
        closeVehicleDetailModal();
      }
    });

    function printToPDF() {
      const docType = document.getElementById('document-type').value;
      const vehicleType = document.getElementById('vehicle-type').value;
      const deliveryNumber = document.getElementById('delivery-number').value;
      const customerName = document.getElementById('customer-name').value;
      const destination = document.getElementById('destination').value;
      const projectDate = document.getElementById('project-date').value;
      
      const spec = vehicleSpecs[vehicleType];
      const capacityResult = document.getElementById('capacity-result').innerHTML;
      const materialsDetail = document.getElementById('materials-detail').innerHTML;
      
      const printWindow = window.open('', '_blank');
      const dateFormatted = new Date(projectDate).toLocaleDateString('id-ID', {
        day: 'numeric',
        month: 'long',
        year: 'numeric'
      });
      
      const docTypeName = {
        'PO': 'Purchase Order (PO)',
        'SC': 'Sales Contract (SC)',
        'CARGO_READY': 'CARGO READY',
        'DN': 'Delivery Note (DN)'
      };
      
      printWindow.document.write(`
        <!DOCTYPE html>
        <html>
        <head>
          <meta charset="UTF-8">
          <title>Loading Report - ${deliveryNumber}</title>
